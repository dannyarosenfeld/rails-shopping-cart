%div.page.navbar.navbar-inverse
  %h1
    - flash.each do |message_type, message|
      %div{:class => "alert alert-#{message_type}"}= message

  %h1.link= @item.title
  %br
  .words= "Item Details:"
  .words= @item.text
  %br
  .words= "Stock Quantity:"
  .words= @item.quantity
  %br
  .words= "Unit Price"
  .words= number_to_currency(@item.price)
  %br
  %img{:src => "#{@item.image}", :style => "width: auto; height: auto;max-width: 400px;max-height: 380px"}
  %br
  %br
  %div.navbar.navbar-inverse.navbar-fixed-bottom
    .words= link_to 'Home', root_path
