%div.page.navbar.navbar-inverse
  %body
  %h1#title Welcome to Your Online Shopping Paradise!
  .link= link_to'New Item', new_item_path
  %div
    %table.table.table-condensed
      %thead
        %tr
          %th.link-heading Recently Posted Items:

    - @items.each do |item|
      %div.col-sm-4
        %tbody
          %tr
            .link=item.title
            .link.img-responsive=link_to image_tag("#{item.image}", width: "50%", height: "30%"), item_path(item.id)
            %br
  %p
  .words.navbar.navbar-inverse.navbar-fixed-bottom= link_to 'Home', root_path
